generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Issue {
  id          Int      @id @default(autoincrement())
  title       String
  location    String
  date        String
  description String
  category    String
  status      String
  reporter    String
  imageUrl    String @db.LongText
  createdAt   DateTime @default(now())
  updatedAt DateTime? @updatedAt
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
}
